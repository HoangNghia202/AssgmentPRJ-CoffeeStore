<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>menuServlet</servlet-name>
        <servlet-class>servlet.menuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>servlet.ShopServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>servlet.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginSigninServlet</servlet-name>
        <servlet-class>servlet.loginSigninServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>servlet.registerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartServlet</servlet-name>
        <servlet-class>servlet.cartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServet</servlet-name>
        <servlet-class>servlet.logoutServet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>placeOrder</servlet-name>
        <servlet-class>servlet.placeOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAdServlet</servlet-name>
        <servlet-class>LoginAdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login_Logout_Amin_Servlet</servlet-name>
        <servlet-class>servlet.Login_Logout_Amin_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editmenuServlet</servlet-name>
        <servlet-class>servlet.editmenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp_Admin_Servlet</servlet-name>
        <servlet-class>servlet.SignUp_Admin_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginSigninServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartServlet</servlet-name>
        <url-pattern>/cartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServet</servlet-name>
        <url-pattern>/logoutServet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>placeOrder</servlet-name>
        <url-pattern>/placeOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAdServlet</servlet-name>
        <url-pattern>/LoginAdServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login_Logout_Amin_Servlet</servlet-name>
        <url-pattern>/Login_Logout_Amin_Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editmenuServlet</servlet-name>
        <url-pattern>/editmenuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp_Admin_Servlet</servlet-name>
        <url-pattern>/SignUp_Admin_Servlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
